div
  .modal-header
    h4.modal-title(translate='') COMMON.TERM.IMPORT_FILE
  .modal-body
    .form-group
      .input-group
        input.form-control(type='text', ng-model='vm.swaggerFile',
          autocomplete='off', autocorrect='off', autocapitalize='off' spellcheck='false')
        .input-group-btn
          button.btn.btn-default(type='button',
            ng-click='vm.loadFile()',
            translate='') COMMON.TERM.IMPORT

    .form-group
      textarea.form-control(rows='10', ng-model='vm.jsonData',
        ng-model-options='{ updateOn: "blur" }',
        autocomplete='off', autocorrect='off', autocapitalize='off' spellcheck='false')

    table.table
      col(width='100')
      col(width='100')
      col
      col(width='40')
      tbody
        tr
          th title
          td(colspan='2') {{ vm.jsonObject.info.title }}
          td
            i.fa.fa-check(ng-if='vm.jsonObject.info.title')
        tr
          th version
          td(colspan='2') {{ vm.info.version }}
          td
            i.fa.fa-check(ng-if='vm.info.allowedVersion')
        tr
          th paths
          td {{ vm.info.paths }}
          td
            json-formatter(json='vm.jsonObject.paths')
          td
            i.fa.fa-check(ng-if='vm.info.paths === "object"')
        tr
          th definitions
          td {{ vm.info.definitions }}
          td
            json-formatter(json='vm.jsonObject.definitions')
          td
            i.fa.fa-check(ng-if='vm.info.definitions === "object"')

  .modal-footer
    button.btn.btn-primary.btn-lg(ng-click='vm.confirm()',
      ng-disabled='!vm.validJsonObject()',
      translate='') COMMON.TERM.SUBMIT
    button.btn.btn-default.btn-lg(ng-click='vm.cancel()',
      translate='') COMMON.TERM.CANCEL